{
  "name": "quick-commands",
  "description": "Alias commonly accessed URLs, making them easier to search, and quickly open multiple tabs with a single search.",
  "manifest_version": 3,
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "logo128.png"
    }
  },
  "icons": {
    "128": "logo128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Open the quick-commands popup"
    }
  },
  "permissions": ["storage", "tabs"]
}
